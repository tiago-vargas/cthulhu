Algoritmo "sala de maquinas"

var
entrada:caractere
PROCEDIMENTO mostre(trecho: CARACTERE)
VAR a: CARACTERE // so pra poder pausar o texto
INICIO
   ESCREVAL(trecho)
   LEIA(a)
FIMPROCEDIMENTO
PROCEDIMENTO pergunte(texto: CARACTERE)
INICIO
   ESCREVAL(texto)
   ESCREVAL()
   entrada <- ""
FIMPROCEDIMENTO
PROCEDIMENTO resposta(var entrada: CARACTERE)
INICIO
   ESCREVAL()
   ESCREVA(">> ")
   LEIA(entrada)
FIMPROCEDIMENTO


